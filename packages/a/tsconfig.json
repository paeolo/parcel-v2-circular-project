{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "composite": true,

      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "strictPropertyInitialization": false,
  
      "module": "commonjs",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "target": "es2018",
      "sourceMap": true,
      "declaration": true,
      "importHelpers": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ],
    "references": [
    ]
  }
  
